{% render 'partials/head.liquid' %}

<article class="artwork-empty">
    <section class="artwork-wrapper">
        {% for api in artworkData %}
        <div class="post-title">
            <h1>{{ api.title }}</h1>
        </div>
        <div class="post-image">
            <img style="view-transition-name: image-{{ api.id }};"
                src="https://fdnd-agency.directus.app/assets/{{ api.image }}?width=200&height=200"
                alt="art images for qatar museums">
        </div>

        {% assign is_liked = false %}

        {% for likedArtwork in likedArtworks %}
        {% if likedArtwork.fabrique_art_objects_id == api.id %}
        {% assign is_liked = true %}
        {% endif %}
        {% endfor %}

        <!-- FORMULIER: LIKE of UNLIKE -->
        <form class="post-like"
            action="{% if is_liked %}/unlike-artwork/{{ api.id }}{% else %}/like-artwork/{{ api.id }}{% endif %}"
            method="POST">
            <input type="hidden" name="showid" value="{{ api.artworkData.id }}">

            <button type="submit" style="background-color: transparent; border: none; cursor: pointer;">

                <svg viewBox="-2.4 -2.4 28.80 28.80" fill="{% if is_liked %}#ff0000{% else %}none{% endif %}"
                    xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="35px" height="35px" viewBox="0,0,256,256">
                    <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                    <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
                    <g id="SVGRepo_iconCarrier">
                        
                        <path fill-rule="evenodd" clip-rule="evenodd"
                            d="M12 6.00019C10.2006 3.90317 7.19377 3.2551 4.93923 5.17534C2.68468 7.09558 2.36727 10.3061 4.13778 12.5772C5.60984 14.4654 10.0648 18.4479 11.5249 19.7369C11.6882 19.8811 11.7699 19.9532 11.8652 19.9815C11.9483 20.0062 12.0393 20.0062 12.1225 19.9815C12.2178 19.9532 12.2994 19.8811 12.4628 19.7369C13.9229 18.4479 18.3778 14.4654 19.8499 12.5772C21.6204 10.3061 21.3417 7.07538 19.0484 5.17534C16.7551 3.2753 13.7994 3.90317 12 6.00019Z"
                            stroke="{% if is_liked %}#ff0000{% else %}#ffffff{% endif %}" stroke-width="2"
                            stroke-linecap="round" stroke-linejoin="round">
                        </path>
                    </g>
                </svg>
            </button>
        </form>
        {% endfor %}
    </section>
</article>




<div class="hero">
    <img src="/images/qatar-museums-hero.jpg" alt="hero-image">
</div>

</body>